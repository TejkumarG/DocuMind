generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatMessage {
  id        String   @id @default(cuid())
  role      String   // "user" or "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("chat_messages")
}
